{
    "name": "mqtt-file-transfer",
    "version": "1.0.0",
    "description": "An MQTT-based file transfer library for sending and receiving large files efficiently.",
    "author": "Aleksandr Smirnov",
    "license": "MIT",
    "funding": {
        "type": "individual",
        "url": "https://github.com/sponsors/jaxer"
    },
    "scripts": {
        "send": "ts-node src/cli.ts send -p 1883 --protocol mqtt big-files/random_2GB.bin",
        "receive": "ts-node src/cli.ts receive -p 1883 --protocol mqtt received-files/",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint \"{src}/**/*.ts\" --fix",
        "test": "jest",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "main": "dist/src/index.js",
    "types": "dist/src/index.d.ts",
    "bin": {
        "mqtt-file-transfer": "dist/src/cli.js"
    },
    "dependencies": {
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "mqtt": "^5.10.4"
    },
    "devDependencies": {
        "@nestjs/common": "^10.0.0",
        "@nestjs/core": "^10.0.0",
        "@nestjs/testing": "^10.0.0",
        "@types/async": "^3.2.24",
        "@types/jest": "^29.5.2",
        "@types/node": "^20.3.1",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "jest": "^29.5.0",
        "nest-commander": "^3.16.1",
        "prettier": "^3.0.0",
        "reflect-metadata": "^0.2.0",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.8.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
